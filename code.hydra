begin;

@p("Informe o valor  principal: ");
var <dec> principal -> (dec)@r();
@p("Informe a taxa de juros anual (em %): ");
var <dec> taxaJuros -> (dec)@r();
@p("Tempo em anos: ");
var <dec> tempoAnos -> (dec)@r();

taxaJuros -> taxaJuros / 100;

var <dec> montante -> principal + (principal * taxaJuros * tempoAnos);

@p(montante);

end;